<div>
    <h2 style="color: crimson;">Lista de productos</h2>

    {{#if productos}}

        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>

                {{#each productos}}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>{{this.precio}}</td>
                        <td><img src={{this.foto}} width="30" alt="foto"></td>
                    </tr>
                {{/each}}
            </table>
        </div>

    {{else}}

        <h3 class="alert alert-warning">No hay productos disponibles</h3>

    {{/if}}
</div>